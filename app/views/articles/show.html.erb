<h1> Showing article details </h1>

<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.text %></p>
    <% if @article.tags.any? %>
        <p><strong>Tags: </strong>
        <% @article.tags.map do |tag| %>
            <span class="tag_<%= tag.color %>"><%= tag.name %><span>
        <% end %></p>
    <% end %>
    

<p><strong>Last update: </strong><%= @article.updated_at.strftime("%d/%m/%Y - %H:%M") %></p>
<p><strong>Date Submitted: </strong><%= @article.date_submitted&.strftime("%d/%m/%Y") %></p>

<p><strong>Number of editions: </strong><%= @article.edit_count %></p>

<%= button_to 'Edit', edit_article_path(@article), method: :get %>
