<% if @user.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>

<%= form_with(model: @user, local: true) do |form| %>

    <p>
        <%= form.label :name %>
        <br/>
        <%= form.text_field :name %>
    </p>

    <% if @user.email == nil %>
    <p>
        <%= form.label :email %>
        <br/>
        <%= form.text_field :email %>
    </p>
    <% end %>

    <p>
        <%= form.label :username %>
        <br/>
        <%= form.text_field :username %>
    </p>

    <% if @user.password == nil %>
    <p>
    <%= form.label :password %>
    <br/>
    <%= form.password_field :password %>
    </p>
    <% else %>
    <p>
    <%= form.label :password_old %>
    <br/>
    <%= form.password_field :password_old %>
    </p>
    <p>
    <%= form.label :password_new %>
    <br/>
    <%= form.password_field :password_new %>
    </p>
    <% end %>

    <%= form.submit %>

<% end %>